<%= turbo_frame_tag 'CG-'+@course.id.to_s+'-'+@group.id.to_s do %>
  <div class="row bg-secondary bg-gradient bg-opacity-10 border-bottom">
    <div class="col-4"><h6><%= @group.name %></h6></div>
    <div class="col-2"><h6>Oceny</h6></div>
    <div class="col-2"></div>
  </div>


  <%= form_with url: save_group_path do |form| %>
    <% @students.each do |s| %>
    <div class="row border-bottom">
      <div class="col">
        <%= @grades[s.id]['name'] %> <%= @grades[s.id]['sname'] %>
      </div>
      <div class="col-2">
        <%= form.number_field 'oceny['+s.id.to_s+']', value: @grades[s.id]['grade'], in: 2.0..5.0, step: 0.5 %>
      </div>
    </div>
    <% end %>
    <%= form.submit "Zapisz", class: "btn btn-sm btn-primary" %>
  <% end %>
<% end %>
